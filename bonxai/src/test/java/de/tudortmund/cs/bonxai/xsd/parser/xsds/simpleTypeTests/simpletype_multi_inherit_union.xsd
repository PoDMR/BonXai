<schema targetNamespace="http://www.w3.org/2001/XMLSchema" xmlns="http://www.w3.org/2001/XMLSchema">

	<simpleType name="stringtype" final="restriction" id="simpleTypeOne">
		<annotation>
			<documentation>
				a simpleType
			</documentation>
		</annotation>
	  <restriction base="string"/>
		<union>
	    <annotation>
	      <documentation>
	      a union of three types
	      </documentation>
	    </annotation>
      <simpleType>
        <restriction base="token">
          <enumeration value="XS"/>
          <enumeration value="XXL"/>
        </restriction>
      </simpleType>
    </union>
	</simpleType>

</schema>